<p id="notice"><%= notice %></p>
<% if @p3.errors.any? %>
     <div id="error_explanation">
      <!-- バリデーションエラーの件数表示   -->
      <h2><%= @p3.errors.count %>件のエラーがあります</h2>

       <ul>
        <% @p3.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
         <% end %>
       </ul>
       </div>
       <% end %>
   <div class="show">
   <%= link_to "一覧" , p3s_path, class: 'btn btn-default' %>
   </div>

  <div class="container">
  <div class="col-md-8 col-md-offset-2">
   <%= form_for(@p3) do |f| %>
     <div class="row">
     <%= image_tag(@p3.picture) %>
       <%= f.file_field :picture %>
    </div>
    <div class="row">
    <%= f.text_field :title, class: 'btn btn-default' %>
  </div>
  <div class="row">
    <%= f.text_field :price, class: 'btn btn-default' %>
  </div>
  <div class="row">
    <%= f.text_field :content, class: 'btn btn-default' %>
  </div>


    <%= f.submit class: 'btn btn-default edit' %>
 </div>
 <% end %>
</div>
</div>