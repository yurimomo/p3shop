<p id="notice"><%= notice %></p>
<% if @p3.errors.any? %>
     <div id="error_explanation">
      <!-- バリデーションエラーの件数表示   -->
      <h2><%= @p3.errors.count %>件のエラーがあります</h2>

       <ul>
        <% @p3.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
         <% end %>
       </ul>
       </div>
       <% end %>
