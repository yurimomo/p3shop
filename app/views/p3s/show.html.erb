<p id="notice"><%= notice %></p>
<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
 
    <div class="blog-text">
      <p class="left"><strong>商品名</strong></p>
      <p class="left"><%= @p3.title %></p>
      <p class="left"><strong>お勧めや使い方</strong></p>
      <p class="left"><%= @p3.content %></p>
      <p class="right">
        <strong>作成時間:</strong>
        <%= @p3.created_at.strftime("%y/%m/%d %p %l:%M") %>
      </p>
    </div>
    <p>コメント一覧</p>
    <div id="comments_area">
      <%= render partial: 'comments/index', locals: { comments: @comments, p3: @p3 } %>
    </div>
    <%= render partial: 'comments/form', locals: { comment: @comment, p3: @p3 } %>
    <% if current_user.id == @p3.user_id %>
      <%= link_to '編集', edit_p3_path(@p3) %> |
    <% end %>
    <%= link_to '戻る', p3s_path %>
  </div>
</div>
